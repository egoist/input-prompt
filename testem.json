{
  "before_tests": "npm run build && browserify test/test.js -o browserified.js",
  "framework": "mocha+chai",
  "launchers": {
    "Node": {
      "command": "mocha test/test.js -R tap",
      "protocol": "tap"
    }
  },
  "port": 7000,
  "browser_start_timeout": 90,
  "src_files": [
    "src/*.js"
  ],
  "serve_files": [
    "dist/input-prompt.min.js",
    "browserified.js"
  ],
  "on_exit": "rm browserified.js",
  "launch_in_dev": ["PhantomJS"]
}
